<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- form inherit -->
    <record id="stock_production_lot_form_inherit" model="ir.ui.view">
        <field name="name">stock.production.lot.form.inherit</field>
        <field name="model">stock.production.lot</field>
        <field name="inherit_id" ref="stock.action_production_lot_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <label for="lot_prefix"/>
                <div>
                    <field name="lot_prefix"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>