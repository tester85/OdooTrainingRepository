    <record id="product_template_form_inherit" model="ir.ui.view">
        <field name="name">product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <!--            Declarando los valores funciona pero el statusbar no me muestra correctamente los estados-->
            <header>
                <button name="action_set_in_use" string="Set In Use" states="prototype" type="object"
                        class="oe_highlight"/>
                <button name="action_set_deprecated" string="Set Deprecated" states="prototype,in_use"
                        type="object"/>
                <field name="state" widget="statusbar" statusbar_visible="prototype,in_use,deprecated"
                       invisible="context.get('is_modal')"/>
            </header>
            <!--            Heredando no reconoce los valores-->
            <!--            <xpath expr="//header" position="inside">-->
