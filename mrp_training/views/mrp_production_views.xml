<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- form inherit mrp.mrp_production_form_view-->
    <record id="training_mrp_production_form_view_inherit" model="ir.ui.view">
        <field name="name">training.mrp.production.form.inherit</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='bom_id']" position="after">
                <label for="lot_prefix"/>
                <div>
                    <field name="lot_prefix"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>