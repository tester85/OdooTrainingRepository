<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_product_state_list">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <div class="text-center">
                        <h3>Product List</h3>
                    </div>
                    <table class="table table-bordered table-sm">
                        <thead>
                            <tr>
                                <th class="text-left">Product name</th>
                                <th class="text-center">Product State</th>
                            </tr>
                        </thead>
<!--                        List all products on report - receive dict product_list{} -->
                        <t t-foreach="product_list" t-as="product">
                            <tr>
                                <td>
                                    <t t-if="product.get('name')">
                                        <span t-esc="product['name']"/>
                                    </t>
                                </td>
                                <td>
                                    <t t-if="product.get('state')">
                                        <span class="text-center" t-esc="product['state']"/>
                                    </t>
                                </td>
                            </tr>
                        </t>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>